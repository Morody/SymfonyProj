{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <h1>Categories</h1>
    <ul>
        {% for category in categories %}
            <li>
                <a href="{{ path('show_video_by_categories', {'category_id': category.id}) }}">{{ category.title }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
